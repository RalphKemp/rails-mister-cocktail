<h1 class="main-title">Fancy Cocktails</h1>




<div class="container">
  <div class="row">
<div class="card text-center"
  style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
         url('<%= cl_image_path @cocktail.photo.path, height: 300, width: 400, crop: :fill %>')">
  <% @cocktails.each do |cocktail| %>
  <div class="card-category"><%= cocktail.name %></div>
  <div class="card-description">
    <h2><%= @cocktail.ingredients %></h2>
    <%= end %>
  </div>
  <a class="card-link" href="#" ></a>
</div>
